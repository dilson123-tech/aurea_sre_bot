services:
  backend:
    url: "http://127.0.0.1:8080"
    health_paths: ["/health", "/docs"]
    railway_service: "dils-wallet"
    required_env:
      - "DATABASE_URL"
      - "OPENAI_API_KEY"
      - "JWT_SECRET"
    db_url_key: "DATABASE_URL"

  client:
    url: "http://127.0.0.1:5173"
    health_paths: ["/", "/index.html"]
    railway_service: "aurea-gold-client"
    required_env:
      - "VITE_API_BASE"
